{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "cleanup": "rimraf .cache ./build ./public/build worker.js",
    "postinstall": "remix setup cloudflare-workers",
    "build": "yarn cleanup && NODE_ENV=production && yarn build:css && yarn build:remix && yarn build:worker",
    "build:remix": "remix build",
    "build:worker": "NODE_ENV=production ts-node ./build.ts",
    "build:css": "node-sass ./styles/ -o ./app/styles/ --output-style compressed",
    "dev": "yarn cleanup && yarn build && cross-env NODE_ENV=development run-p dev:*",
    "dev:miniflare": "miniflare --build-command \"npx ts-node ./build.ts\" --disable-cache --watch",
    "dev:css": "yarn build:css && node-sass -rw ./styles -o ./app/styles --output-style compressed",
    "dev:remix": "remix watch",
    "deploy": "wrangler publish",
    "start": "miniflare"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@remix-run/cloudflare-workers": "^1.0.6",
    "@remix-run/react": "^1.1.3",
    "framer-motion": "^6.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-spring": "^9.4.2",
    "react-syntax-highlighter": "^15.4.5",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@cloudflare/wrangler": "^1.19.4",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-syntax-highlighter": "^13.5.2",
    "miniflare": "^1.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "0.13.14",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "ts-node": "^10.4.0",
    "wrangler": "alpha"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "./worker.js"
}
